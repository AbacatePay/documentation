{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AbacatePay",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "api": {
    "mdx": {
      "server": "https://api.abacatepay.com/v1",
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentação",
        "groups": [
          {
            "group": "Introdução",
            "pages": [
              "pages/introduction",
              "pages/devmode",
              "pages/authentication",
              "pages/webhooks",
              "pages/production"
            ]
          },
          {
            "group": "Cliente",
            "pages": ["pages/client/reference", "pages/client/create", "pages/client/list"]
          },
          {
            "group": "Cobrança",
            "pages": ["pages/payment/reference", "pages/payment/create", "pages/payment/list"]
          },
          {
            "group": "Pix QRCode",
            "pages": [
              "pages/pix-qrcode/reference",
              "pages/pix-qrcode/create",
              "pages/pix-qrcode/simulate-payment",
              "pages/pix-qrcode/check"
            ]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "openapi": "openapi.yaml"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Repositorio",
        "href": "https://github.com/AbacatePay/documentation"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://www.abacatepay.com/app"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/abacatepay",
      "github": "https://github.com/AbacatePay",
      "linkedin": "https://br.linkedin.com/company/abacatepay?trk=public_post_feed-actor-name"
    }
  }
}
